<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiGomokuNarabeGame"
             xmlns:views="using:MauiGomokuNarabeGame.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiGomokuNarabeGame.MainPage"
             x:DataType="local:GomokuNarabeViewModel"
             x:Name="Page">

    <ContentPage.Resources>
        <x:Double x:Key="CoinWidthRequest">50</x:Double>
        <x:Double x:Key="CoinHeightRequest">50</x:Double>
        <x:Int32 x:Key="FieldLanes">9</x:Int32>
        <x:Int32 x:Key="FieldStacks">7</x:Int32>
        <x:Double x:Key="FieldWidthRequest">450</x:Double>
        <x:Double x:Key="FieldHeightRequest">350</x:Double>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="SizeChanged"
            Command="{Binding PageSizeChangedCommand}" />
    </ContentPage.Behaviors>

        <Grid x:Name="GameScreen">          

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="{StaticResource FieldHeightRequest}"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{StaticResource FieldWidthRequest}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid x:Name="TouchArea"
                Grid.Row="0"
                Grid.Column="1"
                BackgroundColor="Cyan">

            <views:LaneSelector BindingContext="{Binding}"/>

        </Grid>
        
        <Grid x:Name="GameField" 
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="BlanchedAlmond">


            <Grid>
                <Image Source="frame.png"/>
            </Grid>
                  
        </Grid>

        <Grid x:Name="StockAreaRed"
                Grid.Row="0" Grid.RowSpan="2"
                Grid.Column="0" BackgroundColor="Red"/>

        <Grid x:Name="StockAreaYellow"
                Grid.Row="0" Grid.RowSpan="2"
                Grid.Column="2" BackgroundColor="Yellow"/>
        
    </Grid>

</ContentPage>
